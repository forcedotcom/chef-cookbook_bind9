<% @zonefiles.each do |conf| -%>
zone "<%= conf["domain"] %>" IN {
  type <%= conf["type"] %>;
  allow-transfer { any; };
  file "<%= node[:bind9][:data_path] %>/<%= conf["domain"] %>";
  allow-update { key <%= node[:bind9][:key]; %> };
};

<% end %>

